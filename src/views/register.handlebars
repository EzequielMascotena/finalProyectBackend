<div class="mt-5">
    <div style="width: 36rem" class="p-4 mx-auto">
        <div>
            <h2>Register</h2>
            <form method="post" action="/api/auth/register">
                <div>
                    <div>
                        <label for="firstName" class="block">Nombre:</label>
                        <input type="text" id="firtName" name="firstName" required>
                    </div>
                    <div>
                        <label for="lastName" class="block">Apellido:</label>
                        <input type="text" id="lastName" name="lastName" required>
                    </div>
                    <div>
                        <label for="age" class="block">Edad:</label>
                        <input type="number" id="edad" name="edad" required>
                    </div>
                </div>

                <div>
                    <label for="email" class="block">Correo electrónico:</label>
                    <input type="email" id="email" name="email" required>
                </div>

                <div>
                    <label for="password" class="block">Contraseña:</label>
                    <input type="password" id="password" name="password" required>
                </div>

                <button type="submit"> Comenzar</button>
            </form>
        </div>

        <div class="p-2">
            <p> YA TIENES CUENTA? <a href="/">Login</a></p>
        </div>
    </div>
</div>