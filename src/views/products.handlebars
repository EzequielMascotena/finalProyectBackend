<div class="container">
    <h1>Todos los productos:</h1>
    <div class="col-md-6 p-2 ">
        <div class="container">
            {{#each payload}}
            <div class="card text-bg-dark mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="" class="img-fluid rounded-start" alt="">
                    </div>
                    <div class="col-md-8">
                        <div class="card-header">{{category}}</div>
                        <div class="card-body">
                            <h5 class="card-title">{{title}}</h5>
                            <strong>ID:</strong> {{_id}}
                            <p class="card-text">{{description}}</p>
                            <strong>Precio: $</strong> {{price}}
                            <button onclick="return addProdToCart('{{_id}}')" type="button" class="agregar btn btn-secondary m-3">Agregar al Carrito</button>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>

        <div class="container">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    {{#if hasPrevPage}}
                    <li class="page-item">
                        <a class="page-link text-decoration-none" href="{{prevPage}}" aria-label="Anterior">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Anterior</span>
                        </a>
                    </li>
                    {{/if}}

                    {{#if hasNextPage}}
                    <li class="page-item">
                        <a class="page-link text-decoration-none" href="{{nextPage}}" aria-label="Siguiente">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Siguiente</span>
                        </a>
                    </li>
                    {{/if}}
                </ul>
            </nav>
        </div>
    </div>
</div>