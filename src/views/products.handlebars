<div class="container">
    <h2> Bienvenido {{ userData.first_name }} {{ userData.last_name }}!</h2>
    <div>
        tipo de cuenta: {{userData.role}}
    </div>
    <div id="userData" data-cart={{ userData.cart }}></div>
    <div>
        <a href="/api/users/current">---Perfil---</a>
        <a href="/api/carts/{{ userData.cart }}">CARRITO---</a>
    </div>
</div>

<div class="container">
    <h1>Tenemos estos productos para vos:</h1>
    <div class="col-md-6 p-2 ">
        <div class="container">
            {{#each payload}}
            <div class="card text-bg-dark mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="" class="img-fluid rounded-start" alt="">
                    </div>
                    <div class="col-md-8">
                        <div class="card-header">{{category}}</div>
                        <div class="card-body">
                            <h5 class="card-title">{{title}}</h5>
                            <strong>ID:</strong> {{_id}}
                            <p class="card-text">{{description}}</p>
                            <strong>Precio: $</strong> {{price}}
                            <button onclick="addToCart('{{_id}}')" type="button" class="agregar btn btn-secondary m-3">
                                Agregar al Carrito </button>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

<script src="/JS/cartProducts.js"></script>