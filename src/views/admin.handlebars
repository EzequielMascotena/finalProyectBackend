<div class="container mt-5">
    <h1 class="mb-4">Administrar Usuarios</h1>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Rol</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr>
                <td>{{this.first_name}} {{this.last_name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.role}}</td>
                <td>
                    <form action="/api/users/admin/role/{{this._id}}" method="post" class="d-inline">
                        <div class="input-group mb-2">
                            <select name="role" class="form-select me-2">
                                <option value="user" {{#if (isRole this.role 'user' )}}selected{{/if}}>User</option>
                                <option value="admin" {{#if (isRole this.role 'admin' )}}selected{{/if}}>Admin</option>
                                <option value="premium" {{#if (isRole this.role 'premium' )}}selected{{/if}}>Premium
                                </option>
                            </select>
                            <button type="submit" class="btn btn-primary">Actualizar Rol</button>
                        </div>
                    </form>
                    <form action="/api/users/admin/{{this._id}}" method="post" class="d-inline delete-form">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger">Eliminar Usuario</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<script src="/JS/admin.js"> </script>